! Example of a SCF-Phonopy calculation for CD3ND3PbI3 with Quantum ESPRESSO
! With comments on how to prepare your own system

&CONTROL
  calculation = 'scf'
  prefix = 'MAPbI3'
  outdir = './tmp/'
  pseudo_dir = './pseudodojo-pbesol-paw-standard/'
  restart_mode = 'from_scratch'
  max_seconds = 21000
  etot_conv_thr = 3.5279349288639156d-12
  forc_conv_thr = 3.889380759660317d-07
  tprnfor = .true.
  tstress = .true.
  nstep = 999
/

&SYSTEM
  ecutwfc = 66.14877991619842
  !ecutrho = ! between 4 and 12 * ecutwfc
  ibrav = 0
  !A =   12.93110
!!! Specify the correct celldm(1) value for the lattice parameter in bohrs
!!! It should appear in `relax.out` as `CELL_PARAMETERS (alat=VALUE)`
!!! Then leave the coordinates in this input file as `CELL_PARAMETERS alat`
  celldm(1) = 24.43623749
  nat = 48
  ntyp = 5
  input_dft = 'PBEsol'
  vdw_corr = 'DFT-D3'
  dftd3_version = 4
  dftd3_threebody = .true.
  occupations = 'fixed'
/

&ELECTRONS
  adaptive_thr = .true.
  conv_thr = 3.5279349288639156d-12
  diagonalization = 'ppcg'
  !mixing_beta = 0.7d0
  diago_thr_init = 1.0d-7
  electron_maxstep = 999
/

&IONS
  ion_dynamics = 'bfgs'
  trust_radius_min = 1.8897261259077822d-06
  upscale = 10000
/

&CELL
  cell_dynamics = 'bfgs'
  !cell_dofree = 'volume'
  press = 0.0001
  press_conv_thr = 0.0001
/

K_POINTS (automatic)
  2 2 2 1 1 1

